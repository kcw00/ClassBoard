# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/classboard_dev"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# AWS S3 Configuration
S3_BUCKET_NAME=classboard-files
S3_REGION=us-east-1

# AWS CloudFront Configuration
CLOUDFRONT_DOMAIN=your-cloudfront-domain.cloudfront.net

# AWS Cognito Configuration
COGNITO_USER_POOL_ID=your-cognito-user-pool-id
COGNITO_CLIENT_ID=your-cognito-client-id
COGNITO_REGION=us-east-1

# RDS Configuration (for AWS environments)
RDS_HOST=your-rds-endpoint.region.rds.amazonaws.com
RDS_USERNAME=your-db-username
RDS_PASSWORD=your-db-password

# CORS Configuration
FRONTEND_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database Connection Pool Configuration
DATABASE_CONNECTION_LIMIT=10
DATABASE_POOL_TIMEOUT=20000
DATABASE_ACQUIRE_TIMEOUT=60000
DATABASE_TIMEOUT=60000
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_POOL_IDLE_TIMEOUT=30000

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_LOG_SLOW_QUERIES=true
SLOW_QUERY_THRESHOLD_MS=500
SLOW_REQUEST_THRESHOLD_MS=1000

# Caching Configuration
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=300000
CACHE_MAX_SIZE=1000