{
  "environment": "development",
  "region": "us-east-1",
  "aws": {
    "rds": {
      "host": "${RDS_HOST}",
      "port": 5432,
      "database": "classboard_dev",
      "username": "${RDS_USERNAME}",
      "password": "${RDS_PASSWORD}",
      "ssl": true,
      "connectionLimit": 10,
      "acquireTimeoutMillis": 60000,
      "timeout": 60000,
      "idleTimeoutMillis": 600000
    },
    "s3": {
      "bucketName": "classboard-dev-files",
      "region": "us-east-1",
      "signedUrlExpiration": 3600,
      "maxFileSize": "10MB",
      "allowedFileTypes": [
        "image/jpeg",
        "image/png",
        "image/gif",
        "application/pdf",
        "application/msword",
        "application/vnd.openxmlformats-officedocument.wordprocessingml.document",
        "text/plain"
      ]
    },
    "cloudfront": {
      "distributionDomain": "${CLOUDFRONT_DOMAIN}",
      "signedUrlExpiration": 86400
    },
    "cognito": {
      "userPoolId": "${COGNITO_USER_POOL_ID}",
      "clientId": "${COGNITO_CLIENT_ID}",
      "region": "us-east-1"
    },
    "lambda": {
      "region": "us-east-1",
      "timeout": 30,
      "memorySize": 256
    }
  },
  "api": {
    "port": 3001,
    "cors": {
      "origin": ["http://localhost:5173", "http://localhost:3000"],
      "credentials": true
    },
    "rateLimit": {
      "windowMs": 900000,
      "max": 1000
    },
    "jwt": {
      "expiresIn": "1h",
      "refreshExpiresIn": "7d"
    }
  },
  "logging": {
    "level": "debug",
    "format": "combined"
  },
  "monitoring": {
    "enabled": false
  }
}