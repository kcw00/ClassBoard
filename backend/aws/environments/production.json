{
  "environment": "production",
  "region": "us-east-1",
  "aws": {
    "rds": {
      "host": "${RDS_HOST}",
      "port": 5432,
      "database": "classboard_prod",
      "username": "${RDS_USERNAME}",
      "password": "${RDS_PASSWORD}",
      "ssl": true,
      "connectionLimit": 50,
      "acquireTimeoutMillis": 60000,
      "timeout": 60000,
      "idleTimeoutMillis": 600000
    },
    "s3": {
      "bucketName": "classboard-prod-files",
      "region": "us-east-1",
      "signedUrlExpiration": 3600,
      "maxFileSize": "25MB",
      "allowedFileTypes": [
        "image/jpeg",
        "image/png",
        "image/gif",
        "application/pdf",
        "application/msword",
        "application/vnd.openxmlformats-officedocument.wordprocessingml.document",
        "application/vnd.ms-excel",
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet",
        "text/plain"
      ]
    },
    "cloudfront": {
      "distributionDomain": "${CLOUDFRONT_DOMAIN}",
      "signedUrlExpiration": 86400
    },
    "cognito": {
      "userPoolId": "${COGNITO_USER_POOL_ID}",
      "clientId": "${COGNITO_CLIENT_ID}",
      "region": "us-east-1"
    },
    "lambda": {
      "region": "us-east-1",
      "timeout": 300,
      "memorySize": 1024
    }
  },
  "api": {
    "port": 3000,
    "cors": {
      "origin": ["https://classboard.app"],
      "credentials": true
    },
    "rateLimit": {
      "windowMs": 900000,
      "max": 200
    },
    "jwt": {
      "expiresIn": "15m",
      "refreshExpiresIn": "30d"
    }
  },
  "logging": {
    "level": "warn",
    "format": "json"
  },
  "monitoring": {
    "enabled": true,
    "cloudWatch": {
      "logGroup": "/aws/lambda/classboard-production",
      "logRetentionDays": 30
    },
    "alerts": {
      "errorRate": {
        "threshold": 5,
        "period": 300
      },
      "responseTime": {
        "threshold": 2000,
        "period": 300
      }
    }
  }
}