{
  "environment": "production",
  "region": "us-east-1",
  "aws": {
    "rds": {
      "host": "${RDS_HOST}",
      "port": 5432,
      "database": "classboard_prod",
      "username": "${RDS_USERNAME}",
      "password": "${RDS_PASSWORD}",
      "ssl": true,
      "connectionLimit": 50,
      "acquireTimeoutMillis": 60000,
      "timeout": 60000,
      "idleTimeoutMillis": 600000
    },
    "s3": {
      "bucketName": "${S3_BUCKET_NAME}",
      "region": "us-east-1",
      "signedUrlExpiration": 3600,
      "maxFileSize": "200MB",
      "allowedFileTypes": [
        "image/jpeg",
        "image/jpg",
        "image/png",
        "image/gif",
        "image/webp",
        "application/pdf",
        "application/msword",
        "application/vnd.openxmlformats-officedocument.wordprocessingml.document",
        "application/vnd.ms-excel",
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet",
        "application/vnd.ms-powerpoint",
        "application/vnd.openxmlformats-officedocument.presentationml.presentation",
        "text/plain",
        "text/csv",
        "video/mp4",
        "video/mpeg",
        "video/quicktime",
        "audio/mpeg",
        "audio/wav",
        "audio/mp3"
      ]
    },
    "cloudfront": {
      "distributionDomain": "${CLOUDFRONT_DOMAIN}",
      "signedUrlExpiration": 86400
    },
    "cognito": {
      "userPoolId": "${COGNITO_USER_POOL_ID}",
      "clientId": "${COGNITO_CLIENT_ID}",
      "region": "us-east-1"
    },
    "lambda": {
      "region": "us-east-1",
      "timeout": 300,
      "memorySize": 2048
    }
  },
  "api": {
    "port": 3001,
    "cors": {
      "origin": ["https://classboard.app", "https://www.classboard.app"],
      "credentials": true
    },
    "rateLimit": {
      "windowMs": 900000,
      "max": 500
    },
    "jwt": {
      "expiresIn": "1h",
      "refreshExpiresIn": "7d"
    }
  },
  "logging": {
    "level": "warn",
    "format": "combined"
  },
  "monitoring": {
    "enabled": true,
    "cloudWatch": {
      "logGroup": "/aws/lambda/classboard-production",
      "logRetentionDays": 30
    },
    "alerts": {
      "errorRate": {
        "threshold": 2,
        "period": 300
      },
      "responseTime": {
        "threshold": 1000,
        "period": 300
      }
    }
  }
}